<h2>Tasks:</h2>
<ul>
<% @tasks.each() do |task| %>
  <li><%= task.description() %></li>
<% end %>
</ul>
<h2>Create a new task:</h2>
<form action = "/confirmation" method="POST">
  <div class="form-group">
    <label class="form-label" for="description">Enter key:</label>
    <input id="description" name="description" class="form-control" type="text" autofocus>
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>
